{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": ["node"],
    "paths": {
      "@shared": [
        "app/shared"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@core": [
        "app/core/"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@testing": [
        "testing/"
      ],
      "@testing/*": [
        "testing/*"
      ],
      "@env": [
        "environments/"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@theme": [
        "app/theme/"
      ],
      "@theme/*": [
        "app/theme/*"
      ],
      "@layout": [
        "app/layout/"
      ],
      "@layout/*": [
        "app/layout/*"
      ],
      "@helpers": [
        "app/core/helpers/"
      ],
      "@helpers/*": [
        "app/core/helpers/*"
      ],
      "@routes": [
        "app/routes/"
      ],
      "@routes/*": [
        "app/routes/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
